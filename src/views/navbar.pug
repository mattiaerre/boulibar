  .navbar-brand
    a.navbar-item(href="/")
      img(alt="" class="logo" src="images/logo-dark.svg" height="46" width="162")
    .burger.navbar-burger(data-target="navbar-menu")
      span(aria-hidden="true")
      span(aria-hidden="true")
