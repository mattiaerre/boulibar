.navbar.is-fixed-top
  .navbar-brand
    a.navbar-item(href="/")
      | &nbsp;
      span.is-uppercase= copy['moving']
      | &nbsp;
      span.is-uppercase.has-text-weight-bold= copy['on']
      | &nbsp;
      span.is-uppercase.has-text-weight-bold= copy['productions']
    .burger.navbar-burger(data-target="navbar-menu")
      span(aria-hidden="true")
      span(aria-hidden="true")
      span(aria-hidden="true")
  #navbar-menu.navbar-menu
    .navbar-start
      each key in ['about', 'format', 'services']
        a.navbar-item(href=`/${key}` class=`${page.path === key ? 'is-active' : ''}`)= copy[key]
