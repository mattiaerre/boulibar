extends ../layout

mixin heroBody(src)
  .section.is-paddingless
    .container
      .content.has-text-centered
        figure
          img(alt="figure" src= src)
        h1.title.boulibar-is-white.Hero__Title
          | !{copy['accurate-affordable']}
          br
          | !{copy['transcription']}
        a.is-hidden-tablet.boulibar-hero-home-button.button.is-large.is-uppercase(href="/order") !{copy['order']}

mixin heroHome(mobile, tablet, desktop)
  .boulibar-hero-home-mobile.is-hidden-tablet
    +heroBody(mobile)
  .boulibar-hero-home-tablet.is-hidden-desktop.is-hidden-mobile
    +heroBody(tablet)
  .boulibar-hero-home-desktop.is-hidden-touch
    +heroBody(desktop)

block hero
  +heroHome("/images/mobile/hero@3x.png", "/images/tablet/hero-img@3x.png", "/images/tablet/hero-img@3x.png")

block content
  p.is-putty.is-serif.has-text-centered.boulibar-p= copy['home-content-1']
  hr
  p= copy['home-content-2']
  figure.is-marginless
    img.image(alt="figure" src="/images/pages/home/brooke-campbell-44085-unsplash_600x400.jpg")
  h2= copy['turnaround-time']
  p= copy['home-content-3']
  include ../cta/quote
  include ../components/client-logos
  .columns
    .column
      figure.is-marginless
        img(alt="figure" src="/images/pages/home/fancycrave-440148-unsplash_600x400.jpg")
    .column.is-one-third
      h2= copy['translations-captioning-and-copy-editing']
      p= copy['home-content-4']
  .columns
    .column.is-one-third.has-margin-auto
      include ../cta/learn-more
    .column
      figure.is-marginless
        img.image(alt="figure" src="/images/pages/home/77140675_s_600x400.jpg")
