extends ../layout
include ../components/figure

block content
  .section.hero
    .hero-body
      .container.has-text-centered
        +figure("/images/mobile/hero@3x.png", "/images/tablet/hero-img@3x.png", "/images/desktop/hero-img@2x.png")
        h1.title= copy['accurate-affordable-transcription']
        a.is-putty.is-serif(href="/order") !{copy['order']}
  .section
    .container
      .content.has-text-centered
        p.is-putty.is-serif= copy['home-content-1']
        hr
        p.has-text-left= copy['home-content-4']
  .section
    .container
      .content
        figure
          img(src="https://bulma.io/images/placeholders/256x256.png")
        h2= copy['turnaround-time']
        p= copy['home-content-2']
  include ../cta/quote
  include ../components/client-logos
  .section
    .container
      .content
        figure
          img(src="https://bulma.io/images/placeholders/256x256.png")
        h2= copy['translations-captioning-and-copy-editing']
        p= copy['home-content-3']
  include ../cta/learn-more
